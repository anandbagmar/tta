= javascript_include_tag 'defect_analysis'
:css
  body {
      position: relative;
  }
.color_codes{:style => "display: none;"}
  %h3.legend_header Legend:
  #type3.legend_item
    %span.rect
    %span.legend_text Test Category
  #type1.legend_item
    %span.rect
    %span.legend_text Failure Message
  #type2.legend_item
    %span.rect
    %span.legend_text Failing Tests
#container
  #defect-analysis
    %table#defect_analysis_table.table-bordered{:style => "display: none; float: left; margin-bottom: 10%;"}
      %tr.table-bordered
        %th{:style => " text-align: center; width: 37%; "} FAILURE MESSAGE -> FAILING TESTS
        %th{:style => " width: 1%; text-align: center; "} PERCENTAGE
  #defect-analysis-data{:style => "display:none;"}
  :javascript
    var json = "#{@defect_analysis_json.gsub!('"','\"')}";
    var analysis_date = "#{@analysis_date}";
    renderDefectTable.renderTable(json,analysis_date);
